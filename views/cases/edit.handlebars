{{#each errors}}
 <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
	<h3>Edit coin</h3>
	<hr>
	<form action="/cases/{{case.id}}?_method=PUT" method="post">
		<!-- <input type="hidden" name="_method" value="PUT"> -->
		<div class="form-group">
			<label for="symbol">Coin symbol</label>
			<h4>{{case.symbol}}</h4>
		</div>
		<div class="form-group">
			<label for="date_buy">Date buy<i class="text-danger">*</i></label>
			<input type="date" class="form-control" name="date_buy" value="{{case.date_buy}}">
		</div>
		<div class="form-group">
			<label for="buy_price">Buy price<i class="text-danger">*</i></label>
			<input type="text" class="form-control" name="buy_price" value="{{case.buy_price}}" required>
		</div>
		<div class="form-group">
			<label for="coins_count">Coins count<i class="text-danger">*</i></label>
			<input type="text" class="form-control" name="coins_count" value="{{case.coins_count}}" required>
		</div>
		<div class="form-group">
			<label for="exchange">Exchange</label>
			<input type="text" class="form-control" name="exchange" value="{{case.exchange}}">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>